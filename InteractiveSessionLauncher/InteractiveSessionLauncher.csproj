<Project Sdk="Microsoft.NET.Sdk.Worker">

    <PropertyGroup>
        <TargetFramework>net9.0-windows10.0.19041.0</TargetFramework>
        <UseWindowsService>true</UseWindowsService>
        <OutputType>Exe</OutputType>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <!-- Optional: embed pdb for better crash forensics -->
        <DebugType>embedded</DebugType>
        <GenerateDocumentationFile>false</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Hosting.WindowsServices" Version="9.0.9" />
        <PackageReference Include="Microsoft.Extensions.Logging.EventLog" Version="9.0.9" />
        <PackageReference Include="System.Text.Json" Version="9.0.9" />
        <PackageReference Include="System.IO.Pipes.AccessControl" Version="5.0.0" />
    </ItemGroup>

    <ItemGroup>
      <Reference Include="Automata">
        <HintPath>..\..\Common\Automata\artifacts\bin\Automata\Debug\netstandard2.0\Automata.dll</HintPath>
      </Reference>
    </ItemGroup>

</Project>
