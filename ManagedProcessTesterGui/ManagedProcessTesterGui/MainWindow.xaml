<Window x:Class="ManagedProcessTesterGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagedProcessTesterGui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,4,0,-4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="751*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="TargetLabel" Content="Target Program EXE:" HorizontalAlignment="Left" Height="42" Margin="27,39,0,0" VerticalAlignment="Top" Width="282" FontSize="24" FontWeight="Bold" Grid.ColumnSpan="3"/>
        <Label x:Name="ArgsLabel" Content="Args:" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="48" Margin="27,77,0,0" VerticalAlignment="Top" Width="208" FontSize="24" FontWeight="Bold"/>
        <TextBox x:Name="ArgsTextbox" HorizontalAlignment="Left" Margin="66,92,0,0" TextWrapping="Wrap" Text="ping google.com &amp; timeout /t 10" VerticalAlignment="Top" Width="613" Height="33" Grid.Column="2"/>
        <Button Content="Execute" HorizontalAlignment="Left" Margin="227,138,0,0" VerticalAlignment="Top" Width="204" Height="44" Click="Button_Click" FontSize="20" FontWeight="Bold" Background="#FFA3C28C" Grid.Column="2"/>
        <Button Content="Select EXE" HorizontalAlignment="Left" Margin="249,40,0,0" VerticalAlignment="Top" Background="#FFB34F4F" Height="41" Width="77" Click="SetTargetEXE" Grid.Column="2"/>
        <TextBox x:Name="LogsTextBox" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="27,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="701" Height="212"/>
        <CheckBox x:Name="IsSilentCheckbox" Grid.Column="1" Content="Run In Background" HorizontalAlignment="Left" Margin="27,138,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" IsChecked="True" Height="33" Width="191" FontWeight="Bold" FontSize="18" Checked="IsSilentCheckbox_Checked"/>

    </Grid>
</Window>
